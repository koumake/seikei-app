<%= link_to "ログアウト", destroy_user_session_path, method: :delete %>

<h2>募集中オフ会一覧</h2>
<br>
<br>
<div class="contents-main">
  <% @meetings.each do |meeting| %>
    
    <table class="table">
      <thead>
        <tr>
          <th scope="row">タイトル</th>
          <td class="detail-value"><%= meeting.title %></td>
        </tr>
        <tr>
          <th scope="row">内容</th>
          <td class="detail-value"><%= meeting.content %></td>
        </tr>
        <tr>
          <th scope="row">募集ユーザー</th>
          <td class="detail-value"><%= meeting.user.nickname %></td>
        </tr>
        
      </thead>
    </table>
    
    <div class="meeting-options">
      <ul>
        <li>
            <%= link_to '詳細をみる', meeting_path(meeting.id), method: :get %>
        </li>
        <% if user_signed_in? && current_user.id == meeting.user_id %>
        <li>
          <%= link_to '募集を終了する', meeting_path(meeting.id), method: :delete %>
        </li>
        <% end %>
      </ul>
    </div>
    <br>
    <br>
    <br>
    <br>
    
  <% end %>
</div>