<div class="group-speak">
  <div class="speaks">
    <%= render partial: 'speak', collection: @speaks %>
  </div>
  
  <%= form_with model: [@group, @speak], html: {class: "form"}, local: true do |f| %> 
    <div class="form-input">
       <%= f.text_field :content, placeholder: 'type a message' %>
       <label class="form-image">
         <span class="image-file">画像</span>
         <%= f.file_field :image, class: 'hidden' %>
       </label>
    </div>
    <%= f.submit '送信', class: 'form-submit' %>
  <% end %>
  <br>
  <br>
  <%= link_to "グループ一覧ページへ戻る", groups_path %>
</div>