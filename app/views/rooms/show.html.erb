<h1>オフ会申し込みDM</h1>

<% if @messages.present? %>
  <% @messages.each do |m| %>
    <strong><%= m.content %></strong>
    <small>by <strong><a href="/users/<%= m.user_id %>"><%= m.user.email %>さん</a></strong></small>
  <% end %>
<% else %>
  <h3 class="text-center">メッセージはまだありません</h3>
<% end %>

<%= form_for @message, url: messages_path do |f| %>
 <div class="form-group"> 
   <%= f.text_field :content, :placeholder => "メッセージを入力して下さい", class: "form-control" %>
 </div>
 <div class="form-group"> 
   <%= f.hidden_field :room_id, :value => @room.id, class: "form-control" %>
 </div>  
   <%= f.submit "オフ会に申し込む", class: "btn btn-primary" %>
<% end %>